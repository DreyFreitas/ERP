FROM node:18-alpine

WORKDIR /app

# Copiar arquivos de dependências
COPY package*.json ./

# Instalar dependências
RUN npm ci --only=production

# Copiar código fonte
COPY . .

# Gerar cliente Prisma
RUN npx prisma generate

# Criar diretório de uploads
RUN mkdir -p uploads

# Expor porta
EXPOSE 7001

# Variável de ambiente
ENV PORT=7001

# Comando para iniciar
CMD ["npm", "run", "dev"]
